<script>
document.addEventListener('DOMContentLoaded', function() {
    const tanggalInput = document.getElementById('tanggal');
    const previewBtn = document.getElementById('previewBtn');
    const exportBtn = document.getElementById('exportBtn');
    const previewCount = document.getElementById('preview-count');
    const countText = document.getElementById('count-text');

    // Quick date selection
    document.querySelectorAll('.date-quick-select').forEach(btn => {
        btn.addEventListener('click', function() {
            // Remove active class from all buttons
            document.querySelectorAll('.date-quick-select').forEach(b => {
                b.classList.remove('btn-primary');
                b.classList.add('btn-outline-secondary');
            });
            
            // Add active class to clicked button
            this.classList.remove('btn-outline-secondary');
            this.classList.add('btn-primary');
            
            // Set date and check
            const selectedDate = this.dataset.date;
            tanggalInput.value = selectedDate;
            checkAvailableIsu();
        });
    });

    // Preview functionality
    previewBtn.addEventListener('click', function() {
        checkAvailableIsu();
    });

    // Check isu count for selected date
    function checkAvailableIsu() {
        const selectedDate = tanggalInput.value;
        if (!selectedDate) {
            previewCount.style.display = 'none';
            exportBtn.disabled = true;
            return;
        }

        previewCount.style.display = 'block';
        countText.textContent = 'Memuat...';
        previewCount.className = 'alert alert-secondary';
        exportBtn.disabled = true;
        previewBtn.disabled = true;

        // API call untuk mendapatkan count
        fetch(`{{ route('isu.export.preview.count') }}?tanggal=${selectedDate}`, {
            method: 'GET',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'X-CSRF-TOKEN': '{{ csrf_token() }}',
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            return response.json();
        })
        .then(data => {
            previewBtn.disabled = false;
            document.getElementById('previewBtnText').textContent = 'Preview';
            
            if (data.success && data.count > 0) {
                const breakdown = data.breakdown;
                countText.innerHTML = `
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        <strong>${data.count} isu</strong> siap diekspor pada ${data.formatted_date}
                    </div>
                    <div class="row text-center">
                        <div class="col-4">
                            <small class="text-muted d-block">Jenis Isu</small>
                            <span class="badge bg-primary">${breakdown.strategis} Strategis</span>
                            <span class="badge bg-secondary">${breakdown.biasa} Biasa</span>
                        </div>
                        <div class="col-4">
                            <small class="text-muted d-block">Tone</small>
                            <span class="badge bg-success">${breakdown.tone.positif} Positif</span>
                            <span class="badge bg-danger">${breakdown.tone.negatif} Negatif</span>
                            <span class="badge bg-warning">${breakdown.tone.netral} Netral</span>
                        </div>
                        <div class="col-4">
                            <small class="text-muted d-block">Skala</small>
                            <span class="badge bg-dark">${breakdown.skala.nasional} Nasional</span>
                            <span class="badge bg-info">${breakdown.skala.regional} Regional</span>
                            <span class="badge bg-light text-dark">${breakdown.skala.lokal} Lokal</span>
                        </div>
                    </div>
                `;
                previewCount.className = 'alert alert-success';
                exportBtn.disabled = false;
            } else {
                countText.innerHTML = `
                    <div class="text-center">
                        <i class="fas fa-exclamation-circle text-warning me-2"></i>
                        ${data.message}
                    </div>
                `;
                previewCount.className = 'alert alert-warning';
                exportBtn.disabled = true;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            previewBtn.disabled = false;
            document.getElementById('previewBtnText').textContent = 'Preview';
            countText.innerHTML = `
                <div class="text-center">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    Gagal memuat data preview. Silakan coba lagi.
                    <br><small class="text-muted">Error: ${error.message}</small>
                </div>
            `;
            previewCount.className = 'alert alert-danger';
            exportBtn.disabled = true;
        });
    }

    function formatDate(dateString) {
        return new Date(dateString).toLocaleDateString('id-ID', {
            day: 'numeric',
            month: 'long', 
            year: 'numeric'
        });
    }

    // Auto-check on page load if date is set
    if (tanggalInput.value) {
        checkAvailableIsu();
    }

    // Auto-check when date changes
    tanggalInput.addEventListener('change', checkAvailableIsu);

    // Form submit handling
    document.getElementById('exportForm').addEventListener('submit', function(e) {
        const exportBtnText = document.getElementById('exportBtnText');
        const exportBtn = document.getElementById('exportBtn');
        
        // Show loading state
        exportBtnText.textContent = 'Membuat PDF...';
        exportBtn.disabled = true;
        
        // Note: Form akan submit normal, loading state akan reset setelah download
    });

    // Loading state untuk preview button
    previewBtn.addEventListener('click', function() {
        const previewBtnText = document.getElementById('previewBtnText');
        const originalText = previewBtnText.textContent;
        
        previewBtnText.textContent = 'Memuat...';
        previewBtn.disabled = true;
        
        setTimeout(() => {
            checkAvailableIsu();
        }, 100);
    });
});
</script>
@endpush